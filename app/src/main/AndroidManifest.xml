<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fighting.teamsixteen.unithon.interviewproj">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroupListActivity"
            android:label="@string/title_activity_group_list" />
        <activity
            android:name=".QuestionListActivity"
            android:label="@string/title_activity_question_list"
            />
        <activity
            android:name=".VideoListActivity"
            android:label="@string/title_activity_video_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VideoViewActivity"
            android:label="@string/title_activity_video_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VideoMakeActivity"
            android:label="@string/title_activity_video_make"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
