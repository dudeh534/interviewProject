<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_question_resist"
        android:padding="1dp"
        android:orientation="horizontal"
        android:id="@+id/actionbar_cus">

        <Button
            android:id="@+id/information_btn_toggle12"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:visibility="visible"
            android:background="@drawable/btn_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:id="@+id/button"
            android:background="@drawable/btn_succes"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_margin="20dp"
        android:background="@drawable/round"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            android:id="@+id/linear2"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="82dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/linear2"
            android:id="@+id/frameLayout">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_gravity="center"
                android:hint="질문을 입력하세요"
                android:textColorHint="#c9c9c9"
                android:textColor="#000000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/frameLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recording"
                android:layout_gravity="center"
                android:background="@drawable/question_record"/>
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>